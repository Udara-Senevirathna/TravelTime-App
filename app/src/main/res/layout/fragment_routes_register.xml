<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/teal_300"
    tools:context=".fragment.RoutesRegister">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/RouteRegistrationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Route Registration"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="28sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Route No"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:entries="@array/choices"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/RouteNo"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Route No"
                android:textColorHint="@color/black"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Departure_Location"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Departure Location"
                android:textColorHint="@color/black"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Arrival_Location"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Arrival Location"
                android:textColorHint="@color/black"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/Date"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:drawableTint="@color/black"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Travel Date"
                android:textColorHint="@color/hintColor"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"
                android:onClick="showDatePicker" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/Times"
                android:background="@drawable/custom_edittext"
                android:drawableTint="@color/black"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:hint="Time"
                android:textColorHint="@color/hintColor"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"
                android:onClick="showTimePicker" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Price"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Price"
                android:textColorHint="@color/black"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/teal_700"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

